<section class="hero-section hero-section-full-height">
	<div class="container-fluid">
		<div class="row">

			<div class="col-lg-12 col-12 p-0">
				<div id="hero-slide" class="carousel carousel-fade slide" data-bs-ride="carousel">
					<div class="carousel-inner">

						{% for fields in bannerimageloop %}
							{% for item in fields %}

								<div class="carousel-item active">
									<img src="{{ file_url(id_to_image(item.field_banner_image.0.target_id)) }}" class="carousel-image img-fluid" alt="{{ item.field_banner_image.0.alt }}">

									<div class="carousel-caption d-flex flex-column justify-content-end">
										<h1>{{ item.field_banner_heading.0.value }}</h1>

										<p>{{ item.field_banner_content.0.value }}</p>
									</div>
								</div>
							{% endfor %}
						{% endfor %}
					</div>

					<button class="carousel-control-prev" type="button" data-bs-target="#hero-slide" data-bs-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Previous</span>
					</button>

					<button class="carousel-control-next" type="button" data-bs-target="#hero-slide" data-bs-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="visually-hidden">Next</span>
					</button>
				</div>
			</div>

		</div>
	</div>
</section>


<section class="section-padding">
	<div class="container">
		<div class="row">

			<div class="col-lg-10 col-12 text-center mx-auto">
				<h2 class="mb-5">Welcome to Kind Heart Charity</h2>
			</div>

{% for fields in homepageloop %}
							{% for item in fields %}
			<div class="col-lg-3 col-md-6 col-12 mb-4 mb-lg-0">
				<div class="featured-block d-flex justify-content-center align-items-center">
					<a href="donate.html" class="d-block">
						<img src="{{ file_url(id_to_image(item.field_image.0.target_id)) }}" class="featured-block-image img-fluid" alt="{{ item.field_image.0.alt }}">

						<p class="featured-block-text">{{ item.field_description.0.value | raw }}
						</p>
					</a>
				</div>
			</div>
	{% endfor %}
						{% endfor %}


		</div>
	</div>
</section>
